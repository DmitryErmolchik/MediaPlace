html,body {
	margin: 0;
	padding: 0;
	background: #F2F2F2;
	width: 100%;
	height: 100%;
}

@font-face {
	font-family: Petrarka;
	src: local("Petrarka"), url(../font/HUJHzx6S.ttf)
}

@font-face {
	font-family: Grishenko;
	src: local("Grishenko"), url(../font/GOPIYAT_R.ttf)
}

.catalog {
	font-family: Grishenko, monospace;
	font-size: 300%;
}

.remote {
	font-family: Grishenko, monospace;
	font-size: 300%;
}

.time {
	font-family: Grishenko, monospace;
	font-size: 100%;
}

.wrap {
	overflow: hidden;
	margin: 10px;
}

.box {
	float: left;
	position: relative;
	width: 20%;
	padding-bottom: 20%;
}

.boxInner {
	position: absolute;
	left: 10px;
	right: 10px;
	top: 10px;
	bottom: 10px;
	overflow: visible;
	box-shadow: 0 0 8px rgba(0, 0, 0, 0.5);
	text-align: center;
	background-color: #FFFFFF;
}

@media only screen and (max-width : 480px) {
	Smartphone view: 1 tile
	.box {
		width: 100%;
		padding-bottom: 100%;
	}
}

@media only screen and (max-width : 650px) and (min-width : 481px) {
	Tablet view: 2 tiles
	.box {
		width: 50%;
		padding-bottom: 50%;
	}
}

@media only screen and (max-width : 1050px) and (min-width : 651px) {
	Small desktop / ipad view: 3 tiles
	.box {
		width: 33.3%;
		padding-bottom: 33.3%;
	}
}

@media only screen and (max-width : 1290px) and (min-width : 1051px) {
	Medium desktop: 4 tiles
	.box {
		width: 25%;
		padding-bottom: 25%;
	}
}

@media ( -webkit-min-device-pixel-ratio : 1.5) , ( min-resolution :
	144dpi) {
	/* CSS for high-density screens */
	.box {
		width: 50%;
		padding-bottom: 50%;
	}
}

@media ( -webkit-min-device-pixel-ratio : 2) , ( min-resolution :
	192dpi) {
	/* CSS for low-density screens */
	.box {
		width: 100%;
		padding-bottom: 100%;
	}
	.catalog {
		font-size: 1000%;
	}
	.remote {
		font-size: 1000%;
	}
	.time {
		font-size: 300%;
	}
}


